<section class="search-jumbo">
  <div class="container">
    <p class="search-jumbo-title">Find great job matches like an Engineer, not a robot.</p>
    <p class="search-jumbo-detail">Easily find matches within <%= @job_count %> jobs.</p>

    <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
      <input type="hidden" name="cmd" value="_donations" />
      <input type="hidden" name="business" value="thesimpledev@gmail.com" />
      <input type="hidden" name="item_name" value="If you found this tool helpful, help keep it alive. Thanks everyone!" />
      <input type="hidden" name="currency_code" value="USD" />
      <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donate_SM.gif" border="0" name="submit" title="PayPal - The safer, easier way to pay online!" alt="Donate with PayPal button" />
      <img alt="" border="0" src="https://www.paypal.com/en_US/i/scr/pixel.gif" width="1" height="1" />
    </form>
  </div>
</section>

<div class="container">
  <form class="search" action="/jobs" method="get">
    <div class="form-section-header">
      <span>1</span>
      <h4>Choose points needed to pass</h4>
    </div>

    <input
      type="range"
      id="passing_points"
      value="50"
      name="passing_points"
    />

    <div class="slider">
      <div class="slider-fill"></div>

      <div class="slider-label-container">
        <i class="fas fa-check"></i>
        <p class="slider-label-detail">50 points</p>
      </div>
    </div>

    <div class="form-section-header">
      <span>2</span>
      <h4>Define your keywords</h4>
    </div>
    <section class="fields">
      <fieldset>
        <div class="search-label-container label-good">
          <label
            for="good-keywords"
            class="search-label">
            Good Keywords
          </label>
          <i class="fas fa-thumbs-up"></i>
        </div>
        <p class="label-explanation">
          <i class="fas fa-info-circle"></i>
          If a keyword is found, points are added to the total once.
        </p>
        <textarea
          id="good-keywords"
          class="textarea-goodkeywords"
          name="good_keywords">
css 10
html 10
ruby 20
rails 20
react 10
redux 10
beer 5
appacademy 100
apprentice 5
beer 5
culture 5
cypress 5
enzyme 5
equity 5
javascript 5
jest 5
jquery 5
mysql 5
postgresql 5
postgres 5
pto 5</textarea>
      </fieldset>

      <fieldset>
        <div class="search-label-container label-bad">
          <label
            for="bad-keywords"
            class="search-label">
            Bad Keywords
          </label>
          <i class="fas fa-thumbs-down"></i>
        </div>
        <p class="label-explanation">
          <i class="fas fa-info-circle"></i>
          If a keyword is found, points are deducted from the total once.
        </p>
        <textarea
          id="bad-keywords"
          class="textarea-bad"
          name="bad_keywords">
phd -10
crypto -10
blockchain -10
java -10
c# -10
c++ -10</textarea>
      </fieldset>

      <fieldset>
        <div class="search-label-container label-bad">
          <label
            for="position-exclusions"
            class="search-label">
            Position Exclusions
          </label>
          <i class="fas fa-ban"></i>
        </div>
        <p class="label-explanation">
          <i class="fas fa-info-circle"></i>
          If any of these words are found in the position title, it will be excluded from your results.
        </p>
        <textarea
          id="position-exclusions"
          class="textarea-bad"
          name="position_exclusions">
senior
lead
instructor
scientist
aws
teaching
teacher</textarea>
      </fieldset>
    </section>

    <div class="form-section-header">
      <span>3</span>
      <h4>Select a location</h4>
      <button id="toggleLocations">Show all locations</button>
    </div>
    <ul class="search-locations">
      <% @location_with_count.each_with_index do |record, i| %>
        <li class="search-location <%= i.zero? ? 'selected' : '' %>">
          <input type="radio"
                 name="location"
                 value="<%= record['location'] %>"
                 id="<%= record['location'] %>"
                 <%= i.zero? ? 'checked' : '' %>
          />
          <label for="<%= record['location'] %>">
            <%= record['location'] %> - <%= record['count'] %>
          </label>
        </li>
      <% end %>
    </ul>

    <button class="submit">Search</button>
  </form>
</div>

<script src="assets/search.js"></script>
